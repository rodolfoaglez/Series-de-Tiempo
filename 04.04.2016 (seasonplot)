seasonplot(ICATS,s=12,year.labels=T, main="Valor accion ICA",ylab="valor cierre",col=rainbow(20),
           year.labels.left=T)

monthplot(ICATS, ylab="Valor accion",xlab="month",main="valor acciones ICA")

